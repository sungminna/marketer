# Database Configuration
DATABASE_URL=postgresql+asyncpg://gtmuser:gtmpassword@localhost:5432/gtm_assets

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
ENCRYPTION_KEY=your-32-byte-encryption-key-base64-encoded
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# MinIO Configuration (S3-compatible object storage)
# For local development with Docker Compose, use these default values
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
S3_BUCKET_NAME=gtm-assets
S3_ENDPOINT_URL=http://localhost:9000
S3_REGION=us-east-1

# For production with AWS S3, use:
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# S3_BUCKET_NAME=your-bucket-name
# S3_ENDPOINT_URL=  # Leave empty for AWS S3
# S3_REGION=us-east-1

# API Provider Keys (Users will provide these)
# These are stored encrypted in the database per user
# GEMINI_API_KEY=user-specific-key
# OPENAI_API_KEY=user-specific-key
# GOOGLE_CLOUD_PROJECT=user-specific-project

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Application Settings
APP_NAME=GTM Asset Generator
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# CORS Settings
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Video Background Removal API (optional)
VIDEO_BG_REMOVER_API_KEY=your-videobgremover-api-key
